                    __a: 1,
                    __c: $('#f_inicial').val(),
                    __d: $('#f_final').val(),
                    __e: $('#suministro').val(),
                    __f: $('#medidor').val(),
                    __g: list.toString()
                }),
                success: function (response) {

                    if (response == null) {
                        tabla('No se encontraron registros...');
                    } else {
                        $('#lectura').show();
                        $('#table-consulta_lec').bootstrapTable('load', response);
                        $('#table-consulta_lec').bootstrapTable('resetView');
                        $('#relectura').hide();
                    }
                },
                complete: function () {
                    $('.sige-load').hide();
                },
                error: function (xhr) {
                    $('.sige-load').hide();
                    alert("Algo salió mal, por favor intente de nuevo.");
                }
            });
